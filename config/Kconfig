menu "Ovyl Config Module"

config OVYL_CONFIG
    bool "Config Module"
    default n
    select NVS
    select FLASH
    select FLASH_MAP

config OVYL_CONFIG_APP_DEF_PATH
    string "Path to app configs.def"
    help
      Path to the application’s CFG(...) file.
      Example:
        CONFIGS_APP_DEF_PATH="\"${CMAKE_CURRENT_SOURCE_DIR}/app/app_configs.def\""

config OVYL_CONFIG_USE_CUSTOM_TYPES
    bool "Use custom config types"
    default n
    help
      Enable if the application uses custom config types defined
      in a separate header file.

config OVYL_CONFIG_TYPES_DEF_PATH
    string "Path to app custom type header file"
    help
      Path to the application’s custom config types header file.
      Example:
        CONFIGS_APP_DEF_PATH="\"${CMAKE_CURRENT_SOURCE_DIR}/app/app_configs.def\""

# Pattern for per-module logging config
module = OVYL_CFG_MGR
module-str = OVYL_CFG_MGR
source "subsys/logging/Kconfig.template.log_config"


endmenu